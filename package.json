{
  "name": "chimpanzetype",
  "version": "1.0.0",
  "description": "A modern typing speed test application with user authentication and performance tracking",
  "main": "server/auth-server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node server/auth-server.js",
    "dev": "nodemon server/auth-server.js --watch server",
    "client": "cd client-react && npm start",
    "client:build": "cd client-react && npm run build",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "build": "npm run client:build",
    "install:client": "cd client-react && npm install",
    "install:all": "npm install && npm run install:client",
    "cleanup": "node scripts/cleanup.js",
    "generate-favicons": "node scripts/generate-favicons.js",
    "lint": "eslint server/**/*.js client/js/**/*.js --fix",
    "test": "jest",
    "fresh-start": "npm run cleanup && npm install && npm run dev"
  },
  "keywords": [
    "typing",
    "speed-test",
    "typing-game",
    "wpm",
    "authentication",
    "nodejs",
    "express",
    "postgresql",
    "javascript",
    "web-application",
    "performance-tracking"
  ],
  "author": {
    "name": "ChimpanzeType Team",
    "email": "team@chimpanzetype.com",
    "url": "https://github.com/yourusername/chimpanzetype"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chimpanzetype.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/chimpanzetype/issues"
  },
  "homepage": "https://github.com/yourusername/chimpanzetype#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.5.9",
    "concurrently": "^8.2.2",
    "eslint": "^8.48.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.6.4",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "config": {
    "port": 5500,
    "env": "development"
  },
  "nodemonConfig": {
    "watch": [
      "server",
      "client/js"
    ],
    "ext": "js,json,html,css",
    "ignore": [
      "node_modules",
      "*.test.js",
      "coverage",
      "logs"
    ],
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "server/**/*.js",
      "!server/node_modules/**",
      "!server/coverage/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "rules": {
      "no-console": "warn",
      "prefer-const": "error",
      "no-unused-vars": "error"
    }
  }
}
